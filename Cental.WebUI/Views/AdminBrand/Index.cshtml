@model List<Brand>
@{
    ViewData["Title"] = "Markalar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Marka</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.BrandName</td>
            <td><a asp-action="UpdateBrand" asp-route-id="@item.BrandId" class="btn btn-warning">Güncelle</a></td>
            <td><a asp-action="DeleteBrand" asp-route-id="@item.BrandId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

<a asp-action="CreateBrand" asp-controller="AdminBrand" class="btn btn-primary">Marka Ekle</a>

