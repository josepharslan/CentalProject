@model List<Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="container-fluid categories py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Tüm <span class="text-primary">Araçlarımız</span></h1>
            <p class="mb-0">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ut amet nemo expedita asperiores commodi accusantium at cum harum, excepturi, quia tempora cupiditate! Adipisci facilis modi quisquam quia distinctio,
            </p>
        </div>
        <div class="row justify-content-center pb-3">
            @await Component.InvokeAsync("_CarFilter")
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4 d-flex align-items-stretch">
                    <div class="categories-item p-4 w-100">
                        <div class="categories-item-inner">
                            <div class="categories-img rounded-top">
                                <img src="@item.ImageUrl" class="img-fluid w-100 rounded-top" alt="">
                            </div>
                            <div class="categories-content rounded-bottom p-4">
                                <h4>@item.Brand.BrandName @item.ModelName</h4>
                                <div class="categories-review mb-4">
                                    <div class="me-3">
                                        Puan: @(item.Reviews.Any() ? item.Reviews.Average(x => x.Rating).ToString("0.0") : "Değerlendirilmedi")
                                    </div>
                                    <div class="d-flex justify-content-center text-secondary">
                                        @{
                                            int maxStars = 5;
                                            double avgRating = item.Reviews.Any() ? item.Reviews.Average(x => x.Rating) : 0;
                                            int fullStars = (int)Math.Floor(avgRating);
                                            bool halfStar = avgRating - fullStars >= 0.5;
                                            int emptyStars = maxStars - fullStars - (halfStar ? 1 : 0);
                                        }
                                        @for (int i = 0; i < fullStars; i++)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        @if (halfStar)
                                        {
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                        }
                                        @for (int i = 0; i < emptyStars; i++)
                                        {
                                            <i class="far fa-star text-warning"></i>
                                        }
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <h4 class="bg-white text-primary rounded-pill py-2 px-4 mb-0">@item.Price₺/Gün</h4>
                                </div>
                                <div class="row gy-2 gx-0 text-center mb-4">
                                    <div class="col-4 border-end border-white">
                                        <i class="fa fa-users text-dark"></i> <span class="text-body ms-1">@item.SeatCount Koltuk</span>
                                    </div>
                                    <div class="col-4 border-end border-white">
                                        <i class="fa fa-car text-dark"></i> <span class="text-body ms-1">@item.Transmission</span>
                                    </div>
                                    <div class="col-4">
                                        <i class="fa fa-gas-pump text-dark"></i> <span class="text-body ms-1">@item.GasType</span>
                                    </div>
                                    <div class="col-4 border-end border-white">
                                        <i class="fa fa-car text-dark"></i> <span class="text-body ms-1">@item.Year</span>
                                    </div>
                                    <div class="col-4 border-end border-white">
                                        <i class="fa fa-cogs text-dark"></i> <span class="text-body ms-1">@item.GearType</span>
                                    </div>
                                    <div class="col-4">
                                        <i class="fa fa-road text-dark"></i> <span class="text-body ms-1">@item.Kilometer KM</span>
                                    </div>
                                </div>
                                <a href="#" class="btn btn-primary rounded-pill d-flex justify-content-center py-3">Hemen Kirala</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
