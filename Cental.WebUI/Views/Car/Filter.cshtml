<form class="row g-3 align-items-end bg-light p-4 rounded shadow-sm" style="--bs-bg-opacity: .8;" asp-action="Filter" method="post">
    <div class="col-md-3">
        <label for="brandSelect" class="form-label fw-semibold">Marka</label>
        <select id="brandSelect" class="form-select" asp-items="@ViewBag.cars" name="car">
            <option selected>Araç Seçiniz</option>
            <!-- Marka seçenekleri buraya gelecek -->
        </select>
    </div>
    <div class="col-md-3">
        <label for="modelSelect" class="form-label fw-semibold">Model</label>
        <select id="modelSelect" class="form-select" asp-items="@ViewBag.gasTypes" name="gas">
            <option selected>Model Seçiniz</option>
            <!-- Model seçenekleri buraya gelecek -->
        </select>
    </div>
    <div class="col-md-3">
        <label for="fuelSelect" class="form-label fw-semibold">Yakıt Türü</label>
        <select id="fuelSelect" class="form-select" asp-items="@ViewBag.gearTypes" name="gear">
            <option selected>Yakıt Türü Seçiniz</option>
            <!-- Yakıt türü seçenekleri buraya gelecek -->
        </select>
    </div>
    <div class="col-md-2">
        <label for="yearInput" class="form-label fw-semibold">En Az Yıl</label>
        <input type="number" id="yearInput" class="form-control" placeholder="Yıl Seçiniz" min="1900" max="2099" name="year">
    </div>
    <div class="col-md-1 d-grid">
        <button type="submit" class="btn btn-danger fw-bold">
            <i class="fa fa-filter me-1"></i> Filtrele
        </button>
    </div>
</form>
