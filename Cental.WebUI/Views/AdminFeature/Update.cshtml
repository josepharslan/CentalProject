@model ResultFeatureDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


<form method="post" asp-action="Update">
    <div class="row">
        <div class="col-lg-6">
            <input type="hidden" asp-for="FeatureId" />
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Adı Soyadı giriniz..." />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Icon</label>
                <input type="text" class="form-control" asp-for="Icon" placeholder="Örn. fa fa-trophy fa-2x" />
                <input type="hidden" asp-for="IsRightSide" />
            </div>
            <div class="form-group">
            </div>
        </div>
        <div class="col-lg-12 mb-2">
            <label>Açıklama</label>
            <textarea asp-for="Description" placeholder="Açıklama giriniz..." class="form-control"></textarea>
        </div>
    </div>

    <button class="btn btn-outline-primary">Güncelle</button>
</form>

