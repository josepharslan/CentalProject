@using Cental.DtoLayer.ContactDtos
@model ResultContactDto

<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <div class="footer-item">
                        <h4 class="text-white mb-4">Hakkımızda</h4>
                        <p class="mb-3">Güvenilir araç kiralama hizmetimizle yılların deneyimini sunuyoruz. Müşteri memnuniyeti odaklı yaklaşımımızla sektörde fark yaratıyoruz.</p>
                    </div>
                    <div class="position-relative">
                        <input class="form-control rounded-pill w-100 py-3 ps-4 pe-5" type="text" placeholder="E-posta adresinizi girin">
                        <button type="button" class="btn btn-secondary rounded-pill position-absolute top-0 end-0 py-2 mt-2 me-2">Abone Ol</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Hızlı Linkler</h4>
                    <a href="/About"><i class="fas fa-angle-right me-2"></i> Hakkımızda</a>
                    <a href="/Cars"><i class="fas fa-angle-right me-2"></i> Araçlarımız</a>
                    <a href="/CarTypes"><i class="fas fa-angle-right me-2"></i> Araç Kategorileri</a>
                    <a href="/Team"><i class="fas fa-angle-right me-2"></i> Ekibimiz</a>
                    <a href="/Contact"><i class="fas fa-angle-right me-2"></i> İletişim</a>
                    <a href="/Terms"><i class="fas fa-angle-right me-2"></i> Kullanım Koşulları</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Çalışma Saatleri</h4>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Pazartesi - Cuma:</h6>
                        <p class="text-white mb-0">09:00 - 19:00</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Cumartesi:</h6>
                        <p class="text-white mb-0">10:00 - 17:00</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Pazar:</h6>
                        <p class="text-white mb-0">Kapalı</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">İletişim Bilgileri</h4>
                    <a href="#"><i class="fa fa-map-marker-alt me-2"></i> @Model.Address</a>
                    <a href="mailto:@Model.Email"><i class="fas fa-envelope me-2"></i> @Model.Email</a>
                    <a href="tel:@Model.Phone"><i class="fas fa-phone me-2"></i> @Model.Phone</a>
                    <div class="d-flex">
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href="@Model.FacebookUrl"><i class="fab fa-facebook-f text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href="@Model.TwitterUrl"><i class="fab fa-twitter text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href="@Model.InstagramUrl"><i class="fab fa-instagram text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-0" href="@Model.LinkedInUrl"><i class="fab fa-linkedin-in text-white"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>