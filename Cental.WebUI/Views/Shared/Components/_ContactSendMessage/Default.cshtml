@* Contact Send Message *@
@model CreateMessageDto
<div class="col-xl-6 wow fadeInUp" data-wow-delay="0.1s">
    <div class="bg-secondary p-5 rounded">
        <h4 class="text-primary mb-4">Mesajınızı Gönderin</h4>
        <form asp-action="SendMessage" asp-controller="Contact" method="post">
            <div class="row g-4">
                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="name" placeholder="Adınız">
                        <label for="name">Adınız</label>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="email" placeholder="E-posta Adresiniz">
                        <label for="email">E-posta Adresiniz</label>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-12">
                    <div class="form-floating">
                        <input type="tel" class="form-control" id="phone" placeholder="Telefon">
                        <label for="phone">Telefon Numaranız</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="subject" placeholder="Konu">
                        <label for="subject">Konu</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Mesajınızı buraya yazın" id="message" style="height: 160px"></textarea>
                        <label for="message">Mesaj</label>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-light w-100 py-3">Mesajı Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>
