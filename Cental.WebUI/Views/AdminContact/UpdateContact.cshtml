@using Cental.DtoLayer.ContactDtos
@model ResultContactDto
@{
    ViewData["Title"] = "İletişim Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


<form method="post" asp-action="UpdateContact">
    <div class="row">
        <div class="col-lg-6">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Mail</label>
                <input type="text" class="form-control" asp-for="Email" placeholder="Adı Soyadı giriniz..." />
            </div>
            <div class="form-group">
                <label>Facebook Link</label>
                <input type="text" class="form-control" asp-for="FacebookUrl" placeholder="Adı Soyadı giriniz..." />
            </div>
            <div class="form-group">
                <label>Instagram Link</label>
                <input type="text" class="form-control" asp-for="InstagramUrl" placeholder="Adı Soyadı giriniz..." />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Twitter Link</label>
                <input type="text" class="form-control" asp-for="TwitterUrl" placeholder="https://X.com/" />
            </div>
            <div class="form-group">
                <label>Linkedin Url</label>
                <input type="text" class="form-control" asp-for="LinkedInUrl" placeholder="Adı Soyadı giriniz..." />
            </div>
            <div class="form-group">
                <label>Telefon Numarası</label>
                <input type="text" class="form-control" asp-for="Phone" placeholder="+90-xxx-xxx-xxxx" />
            </div>
            <div class="form-group">
            </div>
        </div>
        <div class="col-lg-12 mb-2">
            <label>Adres</label>
            <textarea asp-for="Address" placeholder="Adresinizi giriniz..." class="form-control"></textarea>
        </div>
    </div>

    <button class="btn btn-outline-primary">Güncelle</button>
</form>


