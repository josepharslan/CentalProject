@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İkon</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Icon</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a asp-action="UpdateService" asp-route-id="@item.ServiceId" class="btn btn-warning">Güncelle</a></td>
            <td><a asp-action="DeleteService" asp-route-id="@item.ServiceId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

<a asp-action="CreateService" asp-controller="AdminService" class="btn btn-primary">Yeni Hizmet Ekle</a>


