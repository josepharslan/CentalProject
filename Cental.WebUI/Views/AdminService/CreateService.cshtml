@model CreateServiceDto
@{
    ViewData["Title"] = "Hizmet Ekle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post" asp-action="CreateService">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label>İkon</label>
                <input type="text" class="form-control" asp-for="Icon" placeholder="İkon class'ı giriniz..." />
            </div>
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Başlık giriniz..." />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Açıklama</label>
                <textarea class="form-control" asp-for="Description" rows="5" placeholder="Açıklama giriniz..."></textarea>
            </div>
        </div>
    </div>

    <div class="text-end mt-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

