@model List<ResultRoleDto>

@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


@{
    int count = 0;
}
<div class="alert alert-info">
    <h5>Sitenin işleyişi açısından rol isimleri şu şekilde olmalıdır: <strong>Admin, Manager, User</strong></h5>
</div>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Role</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a></td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Yeni Rol Ekle</a>

