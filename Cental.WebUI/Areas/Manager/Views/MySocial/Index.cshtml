@model List<ResultUserSocialDto>
@{
    ViewData["Title"] = "Sosyal Medyalarım";
    Layout = "~/Areas/Manager/Views/ManagerLayout/Index.cshtml";
    int count = 0;
}

<h3>Sosyal Medya Hesapları</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Sosyal Medya</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>
                <a href="@item.Url" target="_blank"><i class="@item.Icon"></i>@item.Title</a>
            </td>
            <td>
                <a asp-action="UpdateSocial" asp-route-id="@item.UserSocialId" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <button type="button" class="btn btn-danger" onclick="confirmDelete('@Url.Action("DeleteSocial", "MySocial", new { area = "Manager", id = item.UserSocialId })')">Sil</button>
            </td>
        </tr>
    }
</table>

<a asp-action="CreateSocial" asp-controller="MySocial" asp-area="Manager" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>


<script>
    function confirmDelete(deleteUrl) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu sosyal medya hesabını silmek istediğinize emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'Hayır'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = deleteUrl;
            }
        });
    }
</script>

