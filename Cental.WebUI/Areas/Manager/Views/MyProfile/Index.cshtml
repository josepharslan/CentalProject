@model ProfileEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/ManagerLayout/Index.cshtml";
}


<form method="post" enctype="multipart/form-data">
    <div class="text-center">
        <img src="@Model.ImageUrl" style="width:12rem; height:12rem;" alt="Profil Resmi" />
        <input type="file" asp-for="ImageFile" accept="image/png, image/jpg, image/jpeg" />
    </div>
    <input type="hidden" asp-for="ImageUrl" />
    <div class="form-group">
        <label>Ad</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mail</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon Numarası</label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" asp-for="CurrentPassword" class="form-control" />
    </div>
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <br />
    <button class="btn btn-outline-success">Bilgileri Güncelle</button>
</form>


